<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="900dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/leftpop"
            android:layout_width="450dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:padding="@dimen/middlemargin"
            android:gravity="center"
            android:background="@drawable/background_red">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/freedrink"
                android:textColor="@color/whitercolor"
                android:textSize="@dimen/big"
                android:textStyle="bold"
                android:shadowColor="@color/shadow_white"
                android:shadowRadius="10"
                android:shadowDx="5"
                android:shadowDy="5"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/freelittleico" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/seeadtodrink"
                android:textSize="@dimen/little"
                android:textColor="@color/whitercolor" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightpop"
            android:layout_width="450dp"
            android:layout_height="320dp"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/leftpop"
            android:padding="@dimen/margintop"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/background_blue"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/paydrink"
                android:textColor="@color/whitercolor"
                android:textSize="@dimen/big"
                android:textStyle="bold"
                android:shadowColor="@color/shadow_white"
                android:shadowRadius="10"
                android:shadowDx="5"
                android:shadowDy="5"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@drawable/paylittleico" />

            <TextView
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/little"
                android:textColor="@color/whitercolor" />

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>