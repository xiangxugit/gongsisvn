<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="purewater.com.leadapp.MainActivity">

    <LinearLayout
        android:id="@+id/topstep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@mipmap/install" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/step_install"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:gravity="top|center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/appnametitle"
            android:textColor="@android:color/black"
            android:textSize="30sp" />

        <Button
            android:id="@+id/intall"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="200dp"
            android:layout_marginTop="200dp"
            android:background="@drawable/btn_bg_blue"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/install" />

    </LinearLayout>


    <!--<android.support.v7.widget.AppCompatSeekBar-->
    <!--android:id="@+id/steptwo"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_margin="@dimen/margins"-->
    <!--android:visibility="gone"-->
    <!--/>-->
    <LinearLayout
        android:id="@+id/step_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <ProgressBar
            android:id="@+id/jindu"
            style="@android:style/Widget.Holo.ProgressBar.Horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="110dp"
            android:max="100"
            android:progressDrawable="@drawable/my_bar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="405dp"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="100dp"
            android:text="@string/installing" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_qr_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/qcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/scanqcode" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/step_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/actsucess" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/appnametitle" />
    </LinearLayout>


</LinearLayout>
