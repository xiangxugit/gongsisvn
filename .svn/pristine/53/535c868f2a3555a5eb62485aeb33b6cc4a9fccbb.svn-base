<?xml version="1.0" encoding="utf-8"?><!-- 全局通栏按钮背景样式 -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/bloodred"
                android:endColor="@color/darkred"/>
            <stroke
                android:width="1px"
                android:color="@color/loginBtnSelectborder50"/>
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="@color/unicom_general_button"
                android:endColor="@color/redindex"/>
            <stroke
                android:width="1px"
                android:color="@color/whitercolor"/>
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>